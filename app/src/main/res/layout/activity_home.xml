<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundcolor"
    tools:context=".Activity.HomeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/llads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/lay_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llads"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/andhyta"
        android:gravity="center_horizontal"
        android:text="Biodata"
        android:textColor="#f57448"
        android:textSize="80dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lay_fb"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">


        <Button
            android:id="@+id/btn_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_p"
            android:text="Personal Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_text" />

        <Button
            android:id="@+id/btn_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_e"
            android:text="Education"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_text" />

        <Button
            android:id="@+id/btn_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_f"
            android:text="Family Background"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_text" />


        <Button
            android:id="@+id/btn_maternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_m"
            android:text="Maternal Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_text" />

        <Button
            android:id="@+id/btn_templates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_t"
            android:text="Templates"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_darkmode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_darkmode"
            android:text="Dark Mode"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical" />
</RelativeLayout>