<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/quicksandbold</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/backgroundcolor</item>//apply status bar color in all activity
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>//show all icon when status bar color set to white
        <!--<item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="theme_textview_style" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="theme_scroll">
        <item name="android:scrollbarThumbVertical">@color/colorAccent</item>
        <item name="android:scrollbarSize">1dp</item>
    </style>

    <style name="ToolbarTitle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/goldenrod</item>
        <item name="android:popupBackground">@android:color/black</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_light</item>
    </style>
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/button</item>
        <item name="colorButtonNormal">@color/pink</item>
    </style>


    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/background</item>
        <item name="colorControlActivated">@color/button_blue</item>
        <item name="colorControlHighlight">@color/background</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
